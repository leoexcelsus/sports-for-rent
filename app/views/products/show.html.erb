<div class="container">

  <div>
    <p id="notice"><%= notice %></p>
  </div>

  <div class="flex-container">
    <div class="container col-sm-7">
      <div class="box-product">
        <div class="img-product">
          <% if @product.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path product.photo.key, height: 300, width: 400, crop: :fill %>')">
          <% else %>
          <%= image_tag "", style: "height:300px; width:400px" %>
          <% end %>
        </div>

        <div class="description-container">
          <p>
            <strong>Equipamento:</strong>
            <%= @product.description %>
          </p>
          <p>
            <strong>Onde buscar:</strong>
            <%= @product.address %>
          </p>
          <p>
            <strong>Preço:</strong>
            R$ <%= @product.price.to_f/100 %>
          </p>
          <p>
            <strong>Usuário:</strong>
            <%= @product.user.email %>
          </p>
        </div>

        <div>
          <%= link_to 'Alugue este equipamento', new_product_rental_path(@product), class: "btn btn-ghost" %>
          <%= link_to 'Voltar', products_path, class: "btn btn-ghost" %>
        </div>
      </div>
      <div class="review-container mt-20">
        <table class="table table-borderless">
          <thead>Comentários
            <tr>
              <th scope="col">Usuário</th>
              <th scope="col">Comentário</th>
            </tr>
          </thead>
        </table>
      </div>
    </div>
    <div class="container col-sm-5">
      <div class="map">
        Mapa
      </div>
    </div>
  </div>
</div>
