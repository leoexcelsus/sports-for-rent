<div class="container">
  <div>
    <p id="notice"><%= notice %></p>

    <% if @product.photo.attached? %>
        <%= cl_image_tag @product.photo.key, height: 300, width: 400, crop: :fill %> 
    <% else %>
        <%= image_tag "bicicleta", style: "height:300px; width:400px" %>
    <% end %>
     

    <p>
      <strong>Equipamento:</strong>
      <%= @product.description %>
    </p>

    <p>
      <strong>Endereço:</strong>
      <%= @product.address %>
    </p>

    <p>
      <strong>Preço:</strong>
      R$ <%= @product.price.to_f/100 %>
    </p>

    <p>
      <strong>Usuário:</strong>
      <%= @product.user.email %>
    </p>

  <%= link_to 'Rent this product', new_product_rental_path(@product), class: "btn btn-ghost" %>
  <%= link_to 'Voltar', products_path, class: "btn btn-ghost" %>
  </div>
</div>
 