<div class="container justify-content-center col-sm-4">
  <div class="form-container">
    <h2>Registrar</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "e-mail" }%>
        <%= f.input :password, label: "Senha",
                    required: true,
                    hint: ("#{@minimum_password_length} caracteres mínimos" if @minimum_password_length),
                    input_html: { autocomplete: "nova senha" } %>
        <%= f.input :password_confirmation, label: "Confirmação de senha",
                    required: true, label: "obrigatório",
                    input_html: { autocomplete: "nova senha" } %>
      </div>

      <div class="form-actions">
      <%= f.button :submit, "Cadastre-se", class: "btn btn-ghost" %>
      </div>
      <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>


